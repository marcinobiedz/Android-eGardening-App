<?xml version="1.0" encoding="utf-8"?>
<com.example.egardening.egardening.GridViewItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/select_grid_container"
    android:background="#80000000"
    android:layout_margin="20dp"
    android:padding="10dp"
    android:addStatesFromChildren="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_plant_name"
            android:text="Plant Name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_plant_id"
            android:text="ID"
            android:textAppearance="?android:attr/textAppearanceSmall" />
</com.example.egardening.egardening.GridViewItem>
