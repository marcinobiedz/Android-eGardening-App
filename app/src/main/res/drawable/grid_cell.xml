<?xml version="1.0" encoding="utf-8"?>
<com.example.egardening.egardening.GridViewItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/cell_container"
    android:layout_margin="20dp"
    android:padding="10dp"
    android:addStatesFromChildren="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_plant_name"
            android:text="Plant Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:background="#80000000"
            android:padding="3dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_plant_id"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:padding="3dp" />

    </com.example.egardening.egardening.GridViewItem>
